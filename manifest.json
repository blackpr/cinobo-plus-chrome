{
  "manifest_version": 2,
  "name": "cinobo-plus",
  "description": "Adds missing cinobo features",
  "version": "0.0.1",
  "icons": {
    "64": "icons/icon.png"
  },
  "permissions": ["activeTab"],
  "content_scripts": [
    {
      "matches": ["*://*.cinobo.com/*"],
      "js": ["content-scripts/handle-subs.js"]
    }
  ],
  "browser_action": {
    "default_icon": {
      "64": "icons/icon.png"
    },
    "default_popup": "browser-action/index.html",
    "default_title": "cinobo+"
  }
}
